<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Getränkekarte</title>
    <link rel="stylesheet" href="/styles.css" />
    <meta
      name="description"
      content="Getränkekarte zur alten Backstube. Hier findest du alle Getränke, welche in unserer Backstube angeboten werden."
    />
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg" />
    <link rel="canonical" href="https://www.zuraltenbackstube.de/menu" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/images/apple-touch-icon.png"
    />
    <!-- Include jQuery from CDN -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  </head>
  <style>
    .hinweis {
      display: inline;
      font-size: 5px;
    }
  </style>
  <body>
    <div class="section">
      <%- include('partials/header') %>
      <h2 class="center">Getränkekarte</h2>

      <% if (user && user.isAdmin) { %>
      <div class="menu-card add-category center">
        <h2 class="category-title">Neue Kategorie erstellen</h2>
        <form class="add-category-form">
          <input type="text" name="category" placeholder="Kategorie" required />
          <input type="text" name="name" placeholder="Getränkname" required />
          <input type="text" name="hinweis" placeholder="Hinweis" />
          <input
            type="number"
            name="price"
            placeholder="Preis"
            step="0.1"
            required
          />
          <input type="number" name="sort" placeholder="Reihenfolge" required />
          <button type="submit">Kategorie & Getränk hinzufügen</button>
        </form>
      </div>
      <% } %>

      <div class="menu-container">
        <% categories.forEach(category => { %>
        <div class="menu-card" data-category="<%= category.mainCategory %>">
          <% if (user && user.isAdmin) { %>
          <div class="category-edit">
            <input
              type="text"
              class="category-name-input"
              value="<%= category.mainCategory %>"
              data-category="<%= category.mainCategory %>"
            />
            <input
              type="number"
              class="category-sort-input"
              value="<%= category.sort %>"
              placeholder="Reihenfolge"
              data-category="<%= category.mainCategory %>"
            />
            <button
              class="update-category"
              data-category="<%= category.mainCategory %>"
            >
              ✅
            </button>
          </div>
          <% } else { %>
          <h2 class="category-title"><%= category.mainCategory %></h2>
          <% } %>

          <ul class="drink-list" data-category="<%= category.mainCategory %>">
            <% category.drinks.forEach(drink => {
                 if (!(user && user.isAdmin) && !drink.enabled) return;
            %>
            <li class="drink-item" data-drink-id="<%= drink.id %>">
              <span class="drink-name">
                <%= drink.name %>
                <p class="hinweis"><%= drink.hinweis %></p>
              </span>
              <span class="drink-price">
                <% if (user && user.isAdmin) { %>
                <input
                  type="number"
                  class="price-input"
                  value="<%= drink.price %>"
                  data-drink-id="<%= drink.id %>"
                />
                <button class="update-price" data-drink-id="<%= drink.id %>">
                  ✅
                </button>
                <button class="delete-drink" data-drink-id="<%= drink.id %>">
                  Löschen
                </button>
                <% if (drink.enabled) { %>
                <button
                  class="toggle-drink"
                  data-drink-id="<%= drink.id %>"
                  data-enabled="true"
                >
                  Ausblenden
                </button>
                <% } else { %>
                <button
                  class="toggle-drink"
                  data-drink-id="<%= drink.id %>"
                  data-enabled="false"
                >
                  Einblenden
                </button>
                <% } %>
                <% } else { %>
                <%= drink.price %> €
                <% } %>
              </span>
            </li>
            <% }); %>
          </ul>

          <% if (user && user.isAdmin) { %>
          <div class="add-drink">
            <h3>Neues Getränk hinzufügen</h3>
            <form
              class="add-drink-form"
              data-category="<%= category.mainCategory %>"
            >
              <input
                type="text"
                name="name"
                placeholder="Getränkname"
                required
              />
              <input
                type="number"
                name="price"
                placeholder="Preis"
                step="0.1"
                required
              />
              <input type="text" name="hinweis" placeholder="Hinweis" />
              <button type="submit">Hinzufügen</button>
            </form>
          </div>
          <% } %>
        </div>
        <% }); %>
      </div>
    </div>

    <script src="/js/ajaxMenu.js"></script>
    <%- include('partials/footer') %>

    <% if (user && user.isAdmin) { %>
    <!-- jQuery UI für Drag & Drop (nur für Admins) -->
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <script>
      $(function () {
        $('.drink-list').sortable({
          placeholder: 'sortable-placeholder',
          update: function () {
            const $list = $(this);
            const category = $list.closest('.menu-card').data('category');
            const newOrder = $list
              .children('.drink-item')
              .map((_, el) => $(el).data('drink-id'))
              .get();

            $.ajax({
              url: '/menu/reorder',
              method: 'PATCH',
              contentType: 'application/json',
              data: JSON.stringify({ category, newOrder }),
              success() {
                console.log('✅ Reihenfolge gespeichert');
              },
              error(xhr) {
                const err = JSON.parse(xhr.responseText).error;
                console.error('❌ Fehler beim Speichern der Sortierung:', err);
                alert('Fehler beim Speichern: ' + err);
              }
            });
          }
        }).disableSelection();
      });
    </script>
    <style>
      .sortable-placeholder {
        background: #eee;
        border: 2px dashed #aaa;
        height: 2em;
        margin: 4px 0;
      }
    </style>
    <% } %>
  </body>
</html>
