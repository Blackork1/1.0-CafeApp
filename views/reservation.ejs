<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tisch Reservierung</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="reservation-container">
      <%- include('partials/header') %>
      <div class="container">
        <h1 class="page-header">Tisch Reservierung</h1>
      </div>
    </div>
    <% if (!selectedTable) { %>
    <div class="carousel-container">
      <div class="carousel">
        <!-- Table Selection: Each button submits the tableId -->
        <form action="/select-table" method="POST" id="tableForm">
          <legend>Choose a table:</legend>
          <div class="list">
            <% tables.forEach(table => { %>
            <div class="item">
              <img src="/images/table<%= table.id%>.png" alt="Tabel image" />
              <div class="content">
                <div class="tablename"><%= table.roomname %></div>
                <div class="title"><%= table.places %> Sitzplätze</div>
                <div class="topic"><%= table.tablename %></div>
                <div class="des">
                  <!-- lorem 50 -->
                  <%= table.description %>
                </div>
                <div class="buttons">
                  <button type="submit" name="tableId" value="<%= table.id %>">
                    TISCH WÄHLEN
                  </button>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
          <div class="thumbnail">
            <% tables.forEach(table => { %>
            <div class="item">
              <img src="/images/table<%= table.id%>.png" alt="Tabel image" />
              <div class="content">
                <div class="tablename"><%= table.tablename %></div>
                <div class="des"><%= table.places%> Sitzplätze</div>
              </div>
            </div>
            <% }); %>
          </div>
        </form>
        <div class="arrows">
          <button class="prev" id="prev"><</button>
          <button class="next" id="next">></button>
        </div>
        <div class="time"></div>
      </div>
    </div>
    <% } %> <% if (selectedTable && Object.keys(availableSlots).length > 0) { %>
    <h2>Table <%= selectedTable.tablename %> Selected</h2>
    <!-- Reservation Form: Select a Date and Time, then fill out details -->
    <form action="/reserve" method="POST">
      <input
        type="hidden"
        name="selectedTable"
        value="<%= selectedTable.id %>"
      />
      <fieldset>
        <legend>Select a Date and Time:</legend>
        <% Object.keys(availableSlots).forEach(date => { %>
        <div style="margin-bottom: 10px">
          <strong>
            <%= new Date(date).toLocaleDateString('de-DE', { weekday: 'short',
            year: 'numeric', month: 'short', day: 'numeric' }) %></strong
          ><br />
          <% availableSlots[date].forEach(time => { %>
          <!-- Composite radio value: "date|time" -->
          <input
            type="radio"
            id="slot_<%= date %>_<%= time %>"
            name="slot"
            value="<%= date %>|<%= time %>"
            required
          />
          <label for="slot_<%= date %>_<%= time %>"><%= time %></label><br />
          <% }); %>
        </div>
        <% }); %>
      </fieldset>

      <label for="numPeople">Guests:</label>
      <select name="numPeople" id="numPeople" required>
        <% for (let i = 1; i <= selectedTable.places; i++) { %>
        <option value="<%= i %>"><%= i %></option>
        <% } %></select
      ><br />
      <% if (user.isLoggedIn) { %>
      <label for="name">Name:</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        value="<%=user.name%>"
      /><br />
      <label for="email">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        value="<%=user.email%>"
      /><br />
      <% } else {%>
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" value="" required /><br />
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" value="" required /><br />
      <%}%>
      <button type="submit">Reserve</button>
    </form>
    <% } else if (selectedTable) { %>
    <p>
      Sorry, there are no available slots for Table <%= selectedTable.tablename
      %>.
    </p>
    <% } %> <%- include('partials/footer') %>

    <script src="/js/slide.js"></script>
    <script src="/js/navToggle.js"></script>
    <script src="/js/reservation.js"></script>
  </body>
</html>
