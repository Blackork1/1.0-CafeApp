<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog bearbeiten</title>
    <link rel="stylesheet" href="/styles.css" />
    <style>
      .image-preview {
        margin-bottom: 20px;
      }
      .image-preview img {
        max-width: 100%;
        border-radius: 8px;
        margin-bottom: 10px;
      }
      .extra-preview {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
      }
      .extra-preview img {
        width: 150px;
        border-radius: 4px;
      }
    </style>
  </head>
  <body>
    <div class="section">
      <%- include('partials/header') %>
      <div class="container">
        <h1>Blog bearbeiten</h1>
        <form
          action="/blog/<%= post.id %>/edit"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="form-group">
            <label for="heading">Titel:</label>
            <input
              type="text"
              name="heading"
              id="heading"
              value="<%= post.heading %>"
              required
            />

            <label for="text">Text:</label>
            <textarea name="text" id="text" rows="8" required>
<%= post.text %></textarea
            >

            <div class="image-preview">
              <h3>Aktuelles Hauptbild:</h3>
              <% if (post.main_image) { %>
              <img src="/uploads/<%= post.main_image %>" alt="Hauptbild" />
              <% } else { %>
              <p>Kein Hauptbild vorhanden.</p>
              <% } %>
            </div>
            <label for="mainImage">Neues Hauptbild (optional, JPG/PNG):</label>
            <input
              type="file"
              name="mainImage"
              id="mainImage"
              accept="image/jpeg, image/png"
            />

            <div class="image-preview">
              <h3>Aktuelle Extra Bilder:</h3>
              <% if (post.extra_images) { %>
              <div class="extra-preview">
                <% post.extra_images.forEach(function(img) { %>
                <img src="/uploads/<%= img %>" alt="Extra Bild" />
                <% }); %>
              </div>
              <% } else { %>
              <p>Keine Extra Bilder vorhanden.</p>
              <% } %>
            </div>
            <label for="extraImages"
              >Neue Extra Bilder hochladen (optional, max. 5, JPG/PNG):</label
            >
            <input
              type="file"
              name="extraImages"
              id="extraImages"
              accept="image/jpeg, image/png"
              multiple
            />

            <button type="submit">Post aktualisieren</button>
          </div>
        </form>
      </div>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
